      .pull-left.image
        %img.img-circle{:alt => "User Image", :src => "/assets/02/dist/img/user2-160x160.jpg"}/
      .pull-left.info
        %p Alexander Pierce
        %a{:href => "#"}
          %i.fa.fa-circle.text-success
